<?xml version='1.0' encoding='utf-8'?>
<widget id="org.thewheatfield.cordova.intercomTestApp.onex" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Intercom 1.x</name>
    <description>
        A sample Intercom Test App using the Intercom Cordova plugin
    </description>
    <author email="tim@thewheatfield.org" href="http://thewheatfield.org">
        Timothy Lim
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
    <preference name="intercom-app-id" value="YOUR_APP_ID" />
    <preference name="intercom-ios-api-key" value="YOUR_IOS_SDK_API_KEY" />
    <preference name="intercom-android-api-key" value="YOUR_ANDROID_SDK_API_KEY" />
    <plugin name="cordova-plugin-intercom" spec="~1.1.7" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
</widget>
